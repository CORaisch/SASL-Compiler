def take n l = if n=0 or l=nil then nil
                               else x:take (n-1) xs where x  = hd l;
                                                          xs = tl l

||------------------------------------------------------------------||
|| Alternating infinite list                                        ||
||------------------------------------------------------------------||

def one = 4:two
def two = 2:one

.

||------------------------------------------------------------------||
|| Print first 15 elements of list                                  ||
||------------------------------------------------------------------||

take 15 one